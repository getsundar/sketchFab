					// 		// 	}
					// 		// );
					// 		// 
					// 	}
					// });
				});

				api.addEventListener('viewerready', function () {
					annolist.forEach(function (obj) {

						console.log('inside create', obj)
						api.createAnnotation(
							[obj.pox, obj.poy, obj.poz],
							[obj.nox, obj.noy, obj.noz],
							obj.camPos,
